BasedOnStyle: Google
IndentWidth: 2
TabWidth: 2
UseTab: Never

BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true

AllowShortFunctionsOnASingleLine: Empty
ColumnLimit: 100
SpaceBeforeParens: ControlStatements
PointerAlignment: Left
DerivePointerAlignment: false
SortIncludes: true
IncludeBlocks: Preserve
